<section class="comparison-section">
    <div class="container">
        <header class="comparison-header">
            <span class="eyebrow">¿Por qué cambiar?</span>
            <h2>Construcción Tradicional vs Tayga</h2>
        </header>

        <div class="comparison-grid">
            <div class="vs-badge">VS</div>

            <!-- TRADITIONAL -->
            <article class="comparison-card traditional">
                <h3 class="card-title">Construcción Tradicional</h3>
                <ul class="comparison-list">
                    <li class="comp-item">
                        <span class="comp-label">Tiempo de ejecución</span>
                        <span class="comp-value negative">12 - 18 Meses</span>
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Coste final</span>
                        <span class="comp-value negative"
                            >Incierte (+20% desvíos)</span
                        >
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Eficiencia Energética</span>
                        <span class="comp-value">Clase C - B</span>
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Impacto Ambiental</span>
                        <span class="comp-value negative">Alto (Residuos)</span>
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Aislamiento</span>
                        <span class="comp-value">Puentes térmicos comunes</span>
                    </li>
                </ul>
            </article>

            <!-- TAYGA -->
            <article class="comparison-card tayga">
                <h3 class="card-title">Sistema Tayga</h3>
                <ul class="comparison-list">
                    <li class="comp-item">
                        <span class="comp-label">Tiempo de ejecución</span>
                        <span class="comp-value positive">3 - 5 Meses</span>
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Coste final</span>
                        <span class="comp-value positive">100% Cerrado</span>
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Eficiencia Energética</span>
                        <span class="comp-value positive"
                            >Clase A+ (Passivhaus)</span
                        >
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Impacto Ambiental</span>
                        <span class="comp-value positive"
                            >Mínimo (Madera cert.)</span
                        >
                    </li>
                    <li class="comp-item">
                        <span class="comp-label">Aislamiento</span>
                        <span class="comp-value positive"
                            >Hermeticidad total</span
                        >
                    </li>
                </ul>
            </article>
        </div>
    </div>
</section>
