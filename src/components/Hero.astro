<section class="hero-tech" id="hero">
  <!-- BACKGROUND LAYER -->
  <div class="hero-bg-layer">
    <div class="hero-bg-image"></div>
    <div class="hero-gradient-overlay"></div>
  </div>

  <!-- FIXED DECORATION LAYERS (Minimal) -->
  <div class="hero-grid-layer">
    <div class="grid-line vertical v-left"></div>
    <div class="grid-line vertical v-right"></div>
    <div class="grid-line horizontal h-top"></div>
    <div class="grid-line horizontal h-bottom"></div>
  </div>

  <!-- CONTENT LAYER -->
  <div class="hero-content-layer">
    <!-- BRAND ANCHOR (Background Watermark) -->
    <h1 class="hero-brand-title">TAYGA</h1>

    <!-- TOP SERVICES ROW (3 items) -->
    <div class="hero-services-top">
      <div class="service-pill">
        <span class="service-dot"></span>
        <span>EFICIENCIA A+</span>
      </div>
      <div class="service-pill accent-pill">
        <span class="service-icon">✓</span>
        <span>LLAVE EN MANO</span>
      </div>
      <div class="service-pill">
        <span class="service-dot"></span>
        <span>DISEÑO PASIVO</span>
      </div>
    </div>

    <!-- CENTERED EDITORIAL CONTENT -->
    <div class="hero-editorial-group">
      <!-- MAIN HEADLINE -->
      <h2 class="hero-slogan">
        <span class="slogan-line">CASAS QUE</span>
        <span class="slogan-line highlight">INSPIRAN VIDA</span>
      </h2>

      <!-- DESCRIPTION -->
      <p class="hero-manifesto">
        Arquitectura sostenible de alta precisión. <br class="hidden-mobile" />
        Diseño premium para un estilo de vida consciente.
      </p>

      <!-- TURNKEY BADGE REMOVED FROM HERE -->

      <!-- BUTTON REMOVED -->
    </div>

    <!-- SPECS / COORD (Subtle footer info) -->
    <div class="tech-coord-bl">
      <span>LAT 42.87° N / LON 8.54° W</span>
    </div>

    <!-- VERTICAL BADGE REMOVED -->

    <div class="tech-scroll-indicator">
      <span class="scroll-text">DESCUBRE TAYGA</span>
      <div class="scroll-line"></div>
    </div>
  </div>
</section>
