const { title = "Colven Construcciones" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Estilos globales -->
		<link rel="stylesheet" href="src/styles/global.css" />
		<link rel="stylesheet" href="src/styles/navbar.css" />
		<link rel="stylesheet" href="src/styles/hero.css" />
		<link rel="stylesheet" href="src/styles/index.css" />
		<link rel="stylesheet" href="src/styles/productos-top.css" />
		<link rel="stylesheet" href="src/styles/eligenos-section.css" />
		<link rel="stylesheet" href="src/styles/modelos-casas.css" />
		<link rel="stylesheet" href="src/styles/sobre-nosotros.css" />
		<link rel="stylesheet" href="src/styles/footer.css" />
